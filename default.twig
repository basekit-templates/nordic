{% extends "layout.twig" %}
{% block content %}

<div class="wrap">
	<nav class="bk-nav" id="nav">
		{{widget('extendednavigation', 'navigationheader', {"align":"left"})|raw}}
		{{widget('socialicons', 'social', {'googleplus': 'profile', 'linkedin':'profile', 'facebook': 'profile', 'twitter': 'profile', 'youtube': 'profile', 'rss': 'profile', 'instagram': 'profile'})|raw}}
	</nav>
	<div role="main" id="main">
		<header class="bk-header">
			{{widget('logo', 'logo', {"defaultlogo": asset('images/nordic-logo.png'),"showTplWidget":"0"})|raw}}
			{{widget('companyname', 'companyname', {"business": "profile"})|raw}}
		</header>
		<div class="contain" id="contain">
				{{zone('main')|raw}}
		</div><!--end contain-->
		{% include 'includes/footer.twig' %}
	</div><!--end main-->
</div><!--end wrap-->

{% endblock %}